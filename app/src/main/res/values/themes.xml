<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DDM_ProyectoFinal_ONC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_night2</item>
        <item name="colorPrimaryVariant">@color/blue_night</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color.
        <item name="android:windowTranslucentStatus">true</item>
        -->
        <item name="android:statusBarColor">@color/blue_night_trans</item>
         <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DDM_ProyectoFinal_ONC.NoActionBarAndStatusBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/blue_night</item>
        <item name="android:fitsSystemWindows">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarMainStyle" >
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">#A0FFFFFF</item>
        <item name="android:iconTint">#A0FFFFFF</item>
    </style>

    <style name="Theme.App"  parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.AppCompat.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close_24</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
    </style>

</resources>